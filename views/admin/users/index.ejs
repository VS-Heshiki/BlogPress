<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <div class="d-flex justify-content-between">
        <h2>Usuarios</h2>
    </div>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Usuario</th>
                <th>Email</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
            <tr>
                <th><%= user.username %></th>
                <th><%= user.email %></th>
                <th>
                    <a class="btn btn-warning" href="/admin/user/edit/<%=user.id%>">Editar</a>
                    <form method="post" action="/user/delete" class="d-inline" onsubmit='(confirmDelete(event, this))'>
                        <input type="hidden" name="id" value="<%=user.id %>">
                        <button class="btn btn-danger">Deletar</button>
                    </form>
                </th>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<%- include ('../../partials/footer.ejs') %>
<script>
    function confirmDelete(event, form) {
        event.preventDefault();
        var decision = confirm('Voce quer realmente deletar esse usuario?')
        if (decision) {
            form.submit();
        }
    }
</script>