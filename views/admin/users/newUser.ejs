<%- include ('../../partials/navbar.ejs') %>
<div class="container">
    <br>
    <div class="card">
        <div class="card-header">
            <h2>Cadastro de Usuario</h2>
        </div>
        <div class="card-body">
            <form method="post" action="/user/create">
                <label>Username</label>
                <input class="form-control" type="text" name='username' placeholder="Defina sua usuario"
                    id="titUser"><br>
                <label>E-mail</label>
                <input class="form-control" type="email" name='email' placeholder="Digite seu email" id="email"><br>
                <label>Password</label>
                <input class="form-control" type="password" name='password' placeholder="Digite sua senha"
                    id="password"><br>
                <button class="btn btn-primary">Cadastrar</button>
            </form>
        </div>
    </div>
</div>

